<form action="/users" accept-charset="UTF-8" method="post">

<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<label for="user_name">Username: </label>
<input id="user_name" class="form-control" type="text" name="user[username]"><br>

<label for="user_email">Email: </label>
<input id="user_email" class="form-control" type="email" name="user[email]"><br>

<label for="user_password">Password: </label>
<input id="user_password" class="form-control" type="password" name="user[password]"><br>

<input type="submit" name="commit" value="Submit">

</form> 
