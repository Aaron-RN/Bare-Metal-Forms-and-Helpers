
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.each do |error, msg| %>
        <li><%= "#{error} - #{msg}" %></li>
      <% end %>
    </ul>
  <% end %>

  Username: <%= f.text_field :username %><br />
  Email: <%= f.email_field :email , :placeholder => "example@example.com"%><br />
  Password: <%= f.password_field :password %><br />
  <%= f.submit %>
 <% end %>

